USE DB_KBT_SYSTEM;

CREATE TABLE TB_CLIENTE(	
		STATUS			CHAR(1)		DEFAULT 'A'
	,	NOME			VARCHAR(50)		NOT NULL	
	,	CONTATO		BIGINT			NOT NULL		
	,	CEP			BIGINT			
	,	BAIRRO			VARCHAR(50)		
	,	LOGRADOURO		VARCHAR(50)
	,	NUMERO 		INT
	,	COMPLEMENTO		VARCHAR(50)
	,	PLANO_SERVICO		VARCHAR(15)
	,	DATA_CONTRATACAO	DATE
	,	DATA_VENCIMENTO	DATE
	,	FORMA_PAGAMENTO	VARCHAR(15)
	,	PRIMARY KEY		(CONTATO)	
);

CREATE TABLE TB_PET(
      		NOME			VARCHAR(50)	DEFAULT 'A'
   	,   	FK_CONTATO_DONO 	BIGINT    	NOT NULL
	,	IDADE			INT
	,	PORTE			CHAR(1)
	,	SEXO 			CHAR(1)        NOT NULL
	,   	CASTRADO        	CHAR(1)
	,	RACA			VARCHAR(30)
	,	CONSTRAINT FK_CONTATO_DONO FOREIGN KEY (FK_CONTATO_DONO) REFERENCES TB_CLIENTE (CONTATO)
);

CREATE TABLE TB_PRODUTO(
		STATUS			CHAR(1)		DEFAULT 'A'
	,	DESCRICAO		VARCHAR(50)		NOT NULL	
	,	CODIGO_BARRAS		VARCHAR(12)		
	,	PRECO			DECIMAL(15, 2)		NOT NULL
	,	FORNECEDOR		VARCHAR(50)		
	,	MARCA			VARCHAR(50)
	,	PRIMARY KEY (CODIGO_BARRAS)	
);


create table TB_SERVICO (
	ID INT NOT NULL AUTO_INCREMENT,
	STATUS CHAR(1) DEFAULT 'A',
	DESCRICAO varchar (50) NOT NULL,
	PRECO DOUBLE,
	PRIMARY KEY (id)
);



