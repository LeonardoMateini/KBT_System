CREATE DATABASE DB_KBT_SYSTEM;
SHOW DATABASES;
SHOW TABLES;
show COLUMNS from <TABELA>;
describe <TABELA>;

USE DB_KBT_SYSTEM;

CREATE TABLE TB_PRODUTO(
		ID			INT			AUTO_INCREMENT
	,	DESCRICAO		VARCHAR(50)		NOT NULL	
	,	CODIGO_BARRAS		VARCHAR(12)		
	,	PRECO			DECIMAL(8, 2)		NOT NULL
	,	FORNECEDOR		VARCHAR(50)		
	,	MARCA			VARCHAR(50)
	,	PRIMARY KEY (ID)	
);
CREATE TABLE TB_PRODUTOS(ID INT AUTO_INCREMENT, DESCRICAO VARCHAR(50) NOT NULL, CODIGO_BARRAS VARCHAR(12), PRECO DECIMAL(8,2) NOT NULL, FORNECEDOR VARCHAR(50), MARCA VARCHAR(50), PRIMARY KEY (ID));


create table TB_SERVICO (
	ID INT NOT NULL AUTO_INCREMENT,
	DESCRICAO varchar (50),
	PRECO DOUBLE,
	PRIMARY KEY (id)
);

CREATE TABLE TB_CLIENTE(	
		NOME			VARCHAR(50)		NOT NULL	
	,	CONTATO		INT			NOT NULL		
	,	CEP			INT			
	,	BAIRRO			VARCHAR(50)		
	,	LOGRADOURO		VARCHAR(50)
	,	NUMERO 		INT
	,	COMPLEMENTO		VARCHAR(50)
	,	PLANO_SERVICO		VARCHAR(15)
	,	DATA_CONTRATACAO	DATE
	,	DATA_VENCIMENTO	DATE
	,	FORMA_PAGAMENTO	VARCHAR(15)
	,	PRIMARY KEY		(CONTATO)	
);

CREATE TABLE TB_PET(
      	NOME			VARCHAR(50)		NOT NULL
    ,   FK_CONTATO_DONO INT             NOT NULL
	,	IDADE			INT
	,	PORTE			CHAR(1)
	,	SEXO 			CHAR(1)         NOT NULL
	,   	CASTRADO        CHAR(1)
	,	RACA			VARCHAR(30)
	,	CONSTRAINT FK_CONTATO_DONO FOREIGN KEY (FK_CONTATO_DONO) REFERENCES TB_CLIENTE (CONTATO)
);

